<%= form_with(model: post) do |form| %>
  <%# エラーメッセージの表示 %>
  <% if post.errors.any? %>
    <div style="color: red; border: 1px solid red; padding: 10px; margin-bottom: 20px;">
      <h2><%= post.errors.count %>件のエラーがあります:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# 1. タイトル入力欄 %>
  <div style="margin-bottom: 15px;">
    <%= form.label :title, "タイトル（企業名・選考内容など）", style: "display: block; font-weight: bold;" %>
    <%= form.text_field :title, class: "form-control", placeholder: "例：株式会社〇〇の最終面接" %>
  </div>
  
  <%# 2. 日付登録 %>
  <div style="margin-bottom: 15px;">
    <%= form.label :event_date, "開催日・参加日", style: "display: block; font-weight: bold;" %>
    <%= form.date_field :event_date, class: "form-control" %>
  </div>
  
  <div style="margin-bottom: 15px;">
    <%= form.label :location, "開催場所", style: "display: block; font-weight: bold;" %>
    <%= form.text_field :location, class: "form-control", placeholder: "例：オンライン、東京本社、大阪支店など" %>
  </div>

  <%# 3. カテゴリ選択欄（ドロップダウン） %>
  <div style="margin-bottom: 15px;">
    <%= form.label :category, "カテゴリ", style: "display: block; font-weight: bold;" %>
    <%= form.select :category, 
        ['説明会', 'ES（エントリーシート）', '筆記試験・Webテスト', 'GD（グループディスカッション）', '面接（1次〜最終）', 'インターン', 'その他'], 
        { include_blank: '選択してください' }, 
        { class: "form-select", style: "padding: 5px;" } 
    %>
  </div>

  <%# 4. 本文入力欄 %>
  <div style="margin-bottom: 15px;">
    <%= form.label :content, "体験談の詳細", style: "display: block; font-weight: bold;" %>
    <%# rows: 10 で高さを広げて書きやすくしています %>
    <%= form.text_area :content, rows: 10, class: "form-control", style: "width: 100%;", placeholder: "聞かれた質問、雰囲気、アドバイスなどを自由に書いてください" %>
  </div>

  <%# 送信ボタン %>
  <div style="margin-top: 20px;">
    <%= form.submit "体験談を投稿する", style: "background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;" %>
  </div>
<% end %>