<% if user_signed_in? %>
  <% if current_user.already_liked?(post) %>
    <%# 既にいいねしている場合：取り消しボタン %>
    <%= button_to 'いいねを取り消す', post_likes_path(post), method: :delete, class: "btn btn-danger" %>
  <% else %>
    <%# まだいいねしていない場合：いいねボタン %>
    <%= button_to 'いいね！', post_likes_path(post), method: :post, class: "btn btn-primary" %>
  <% end %>
<% end %>

<%# いいね数の表示 %>
<p>いいね数: <%= post.likes.count %></p>